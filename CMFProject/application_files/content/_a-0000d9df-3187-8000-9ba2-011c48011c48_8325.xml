            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>= if(
  or(
    #&quot;_a-0000d9a9-eb56-8000-9e06-010000010000_751&quot;(
      ri!user
    ),
    not(
      isusernametaken(
        ri!user
      )
    )
  ),
  null,
  #&quot;SYSTEM_SYSRULES_userRecordLink&quot;(
    user: ri!user
  )
)</definition>
